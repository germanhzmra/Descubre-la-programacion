void imagenExit () {
  fill(237,236,64);
  rect(10,10,10,10);
  fill(0,0,0);
  textSize(10);
  text("Exit", 21,20);
}
void controlExit (){
  //background(195,215,65);
  println ("X: " + mouseX);
  println ("Y: " + mouseY);
  if (mousePressed) {
    if (mouseButton == LEFTBUTTON) {
      if (mouseX > 10 && mouseX < 20 && mouseY > 10 && mouseY < 20){
        background(195,215,65) ;
        animate (menu);
      }
    }
  }
}
