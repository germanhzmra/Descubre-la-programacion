void main (){

  animate (menu);
 
  
}
void menu () {
  control1BTN1();
  imagenBTN1();
  control1BTN2();
  imagenBTN2();
  control1BTN3();
  imagenBTN3();
}
void imagenBTN1 () {
  background(195,215,65) ;
  fill(194,172,223);
  rect(120,120,80,80);
  fill(18,134,137);
  textSize(15);
  text("PLAY",137,170);
}
void control1BTN1 () {
  if (mousePressed)
    if (mouseButton == LEFTBUTTON)
    if (mouseX > 120 && mouseX < 200 && mouseY < 200) {
  
    animate (play);
  }} 

